@import 'nib'

html, body
  width 100%
  height 100%

body
  display flex
  flex-direction row
  background #202020

#Overlay
  display none
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background rgba(0,0,0,0.2)

  transition opacity 1s ease-out
  opacity 0

  &.Enabled
    display flex
    flex-direction column
    justify-content center
    align-items center
    opacity 1

  > div
    margin-bottom calc(100%)
    transition margin-bottom 1s ease-out

    &.Active
      margin-bottom 0 

#LogInDialog
  width 400px
  height 300px
  background #fff
  text-align center

#LogInOptions
  list-style none


#AppsBar
  width 60px
  display flex
  flex-direction column
  background #202020
  box-shadow 0 0 1em rgba(0,0,0,0.3) inset

  transition width 0.2s ease-out
  overflow hidden

  &.Hidden
    width 0

  > a, > button
    width 60px
    display flex
    align-items center
    justify-content center
    height 50px
    background none
    border none
    outline none

    &.Active
      background url(/images/nuclearnode/ActiveAppButton.png) no-repeat
    &.Active:hover
      background url(/images/nuclearnode/ActiveAppButton.png) no-repeat, url(/images/nuclearnode/ButtonHoverHighlight.png) bottom center no-repeat
    &:hover
      background url(/images/nuclearnode/ButtonHoverHighlight.png) bottom center no-repeat
    &:active
      background url(/images/nuclearnode/ActiveAppButton.png) no-repeat, url(/images/nuclearnode/ButtonHoverHighlight.png) bottom center no-repeat, rgba(255,255,255,0.05)

#App
  flex 1
  display flex
  flex-direction column
  transition opacity 0.5s ease-out

  &.Fade
    opacity 0

  header
    z-index 0
    font-size 16px
    background linear-gradient(to bottom, rgba(128,128,128,0.3) 0%, rgba(128,128,128,0.2) 100%)
    box-shadow 0 0 2em rgba(0,0,0,0.1)
    line-height 1

    display flex
    align-items center
    color #c0c0c0

    .AppInfo
      flex 1
      font-weight 100
      padding 0 0.5em
      display inline-block

      .AppTitle
        font inherit
        color inherit
        text-decoration none

      .ChannelName
        color #fff
        font-weight 300

    .PlayerInfo
      padding 0 0.5em

      .PlayerName
        color #fff

      #LogInButton, #LogOutLink
        font inherit
        font-size smaller
        background none
        margin 0
        padding 0
        border 0
        color inherit
        line-height 1.25
        text-decoration none

  main
    flex 1
    border-top 1px solid rgba(255,255,255,0.15)
    border-left 1px solid rgba(255,255,255,0.1)
    border-right 1px solid rgba(255,255,255,0.1)

#ToggleMenuButton
  background none
  border none
  padding 0.5em
  outline none

  width 30px
  height 30px

  background url(/images/nuclearnode/ToggleMenuButton.png) center center no-repeat

  &:hover
    background url(/images/nuclearnode/HoveredToggleMenuButton.png) center center no-repeat

  &:active
    background url(/images/nuclearnode/HoveredToggleMenuButton.png) center center no-repeat, rgba(255,255,255,0.1)

#Sidebar
  display flex
  flex-direction column
  width 300px

  background #202020
  box-shadow 0 0 1em rgba(0,0,0,0.3) inset
  color #ccc

  text-align center

#SidebarTabButtons
  display flex
  flex-direction row
  align-items stretch

  button
    flex 1 1 auto
    background #404040
    border 0
    color #a0a0a0
    padding 0.5em
    line-height 1
    outline none

    &:hover
      color #fff
      background url(/images/nuclearnode/ButtonHoverHighlight.png) bottom center no-repeat, #404040

    &:active
      background url(/images/nuclearnode/ButtonHoverHighlight.png) bottom center no-repeat, #4a4a4a
      
    &.Active
      background url(/images/nuclearnode/ActiveTabButton.png) center bottom no-repeat, #404040
      color #d0d0d0

    &.Active:hover
      background url(/images/nuclearnode/ActiveTabButton.png) center bottom no-repeat, url(/images/nuclearnode/ButtonHoverHighlight.png) bottom center no-repeat, #404040
      

#SidebarTabs
  flex 1
  display flex
  flex-direction column

  > div
    flex 1
    flex-direction column

    &:not(.Active)
      display none

  a
    color #eee
    text-decoration none

    &:hover
      text-decoration underline

#ChatTab
  display flex

#ChatLogPanel, #ChatInputPanel
  display flex
  flex-direction column
  // padding 0 1em

#ChatLogPanel
  flex 1
  text-align left

#ChatInputPanel
  height 50px

#ChatLog
  flex 1
  line-height 1.25
  font-size 16px

  overflow-y auto

  padding 0.25em
  list-style none

  li
    padding 0.2em
    border-radius 0.2em
    word-wrap break-word

    &:hover
      background rgba(255,255,255,0.05)

    &.Info
      color #8aa

    .Time
      font-size 75%
      margin-right 0.5em
      opacity 0.5

    .Author
      font-weight bold
      
      &:after
        content ': '

    .Text
      user-select all
      cursor auto

#ChatInputBox
  flex 1
  line-height 1.25
  font-size 14px
  background rgba(0,0,0,0.4)
  border 0
  margin 0
  padding 0.5em
  color #aaa
  outline none
  resize none

  placeholder(color #555,)
