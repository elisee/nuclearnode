#Overlay
  display none
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background rgba(0,0,0,0.2)

  transition opacity 1s ease-out
  opacity 0
  overflow hidden

  &.Enabled
    display flex
    flex-direction column
    justify-content center
    align-items center
    opacity 1

  > div
    display none
    background #fff
    text-align center
    padding 1em
    color #222

    select, input, button
      color inherit
      padding 0.25em
      margin 0.25em

    &.Active
      display block

    h3
      margin-bottom 1em

#LogInDialog
  width 480px

#LogInOptions
  list-style none
  margin 0.5em 0

  li
    text-decoration none
    transform scale(0.9)
    padding 0.25em
    display inline-block

    transition transform 0.1s ease-out

    img
      width 80px

    &:hover
      transform scale(1.0)
      transition none

    &:active
      transform scale(0.9)
