@import 'nib'

#App
  background #405560

  main
    padding 1em
    color #fff
    overflow-y auto

    h2
      margin-top 1em

#LiveChannels
  list-style none
  margin 0 auto
  font-size 20px
  font-weight 300

  td:first-child
    text-align right
  
#LiveChannels, footer
  a
    color #fff
    text-decoration underline

    &:hover
      text-decoration none
      text-shadow 0 0 0.5em rgba(255,255,255,0.5)

h1
  text-align center

#ChooseLanguageForm
  position absolute
  top 40px
  right 10px

h2
  text-align center
  opacity 0.5
  margin-bottom 0.25em
  font-size 200%

#CreateChannelForm
  text-align center

  input
    font inherit

  input[type="text"]
    border none
    background #eee
    margin 0.25em
    padding 0.25em 0.5em
    line-height 1.5

  input[type="submit"]
    margin 0.25em
    padding 0.25em 0.5em
    line-height 1.5

footer
  text-align center
  margin-top 3em
  padding-bottom 1em
  color rgba(#fff,0.5)
  position relative
  z-index 1

  img
    vertical-align middle
    margin-top -7px

  .Links
    opacity 0.5
    font-size smaller
