#AppsBar
  for app in apps
    if ! app.hidden || config.appId == app.id
      a(id=app.id + "AppLink",href=app.URL,class=app.id == config.appId ? 'Active' : '')
          .AppIcon
            img(src=config.hubBaseURL + '/apps/' + app.id + '/Icon.png')
          .AppDetails
            .AppName= app.name
            .AppDescription= app.description
          .AppUsers
